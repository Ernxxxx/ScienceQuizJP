<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80dp"
                android:startColor="#4000F5FF"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- Inner circle -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#1A1A2E" />
            <stroke
                android:width="3dp"
                android:color="#00F5FF" />
        </shape>
    </item>
</layer-list>
