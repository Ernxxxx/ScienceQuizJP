<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#307C4DFF"
                        android:endColor="#20E040FB"
                        android:type="linear" />
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#7C4DFF" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#50FFFFFF" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15FFFFFF" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#25FFFFFF" />
        </shape>
    </item>
</selector>
