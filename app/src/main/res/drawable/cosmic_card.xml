<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item
        android:left="-2dp"
        android:top="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#307C4DFF" />
        </shape>
    </item>
    <!-- Main card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#20FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
</layer-list>
